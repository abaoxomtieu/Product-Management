extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head("Lời mời kết bạn")

        .row(data-users-accept=user.id)
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar? user.avatar : "https://th.bing.com/th/id/R.763b4716501cc74b2972101f15c83cee?rik=8oDmobMGCFpMFA&pid=ImgRaw&r=0")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id 
                                    ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id 
                                    ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend
                                    disabled
                                    ) Đã xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-accepted-friend
                                    disabled
                                    ) Đã chấp nhận
block script 
    script(src="/js/users.js") 