extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Thông tin tài khoản")
        h1(class="mb-4")

        if (user.fullName)
          p Họ tên: <b>#{user.fullName}</b>

        if (user.email)
          p Email: <b>#{user.email}</b>

        if (user.phone)
          p Số điện thoại: <b>#{user.phone}</b>

        p 
          span Trạng thái: 
          span
            <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>


        a(
          href=`${prefixAdmin}/my-account/edit`
          class="btn btn-primary"
        ) Chỉnh sửa thông tin