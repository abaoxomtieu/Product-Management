mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-pagination= pagination.currentPage -1) Back page

            - for(var i = pagination.currentPage-1; i <= pagination.currentPage+1; i++)
                if(pagination.currentPage == 1)
                    if(pagination.totalPage >2)
                        -for(var i = pagination.currentPage; i <= pagination.currentPage+2; i++)
                            li(class=`page-item ${pagination.currentPage ==i ? "active" : ""}`)
                                button(
                                    class="page-link"
                                    button-pagination=i) #{i}
                    else
                        -for(var i = pagination.currentPage; i <= pagination.currentPage+1; i++)
                            li(class=`page-item ${pagination.currentPage ==i ? "active" : ""}`)
                                button(
                                    class="page-link"
                                    button-pagination=i) #{i}   
                else if(pagination.currentPage == pagination.totalPage && pagination.currentPage > 1)

                    if(pagination.totalPage >2)
                        -for(var i = pagination.currentPage -2; i <= pagination.currentPage; i++)
                            li(class=`page-item ${pagination.currentPage ==i ? "active" : ""}`)
                                button(
                                    class="page-link"
                                    button-pagination=i) #{i}
                    else  
                        -for(var i = pagination.currentPage -1; i <= pagination.currentPage; i++)
                            li(class=`page-item ${pagination.currentPage ==i ? "active" : ""}`)
                                button(
                                    class="page-link"
                                    button-pagination=i) #{i}
                else 
                    li(class=`page-item ${pagination.currentPage ==i ? "active" : ""}`)
                        button(
                            class="page-link"
                            button-pagination=i) #{i}
            if(pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(class="page-link" button-pagination= pagination.currentPage +1) Next page
                        if(pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(class="page-link" button-pagination= pagination.totalPage) Last page