extends ../../layouts/default.pug

block main 
    h1 trang ds san pham

    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
            .col-6
                each item in filterStatus
                    button(
                        class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                        button-status = item.status 
                    ) #{item.name}
            .col-6
                form(id="form-search")
                    .input-group 
                        input(
                            type = "text"
                            placeholder="Enter keywords"
                            name = "keyword"
                            class = "form-control")
                        .input-group-append
                            button(
                                class="btn btn-success"
                                type = "submit"
                                ) Search


    .card.mb-3
      .card-header List products
      .card-body
        table.table.table-hover.table-sm
            thead 
                tr 
                    th STT 
                    th Hinh anh 
                    th Tieu de 
                    th Gia 
                    th Trang thai 
                    th Hanh dong 
            tbody
                each item, index in products 
                    tr 
                        td #{index + 1}
                        td 
                            img(src=item.thumbnail
                                alt=item.title
                                width="100px"
                                height="auto")
                        td #{item.title}
                        td #{item.price}$
                        td
                            if(item.status == 'active')
                                a(href="#" class="badge badge-success") Active
                            else 
                                a(href="#" class="badge badge-danger") Inactive
                        td 
                            button(class="btn btn-warning btn-sm" ) Modify
                            button(class="btn btn-danger btn-sm ml-1" ) Delete