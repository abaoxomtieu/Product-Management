extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug


block main 
    h1 trang ds san pham

    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
            .col-6
                +filter-status(filterStatus)
            .col-6
                +search(keyword)


    .card.mb-3
      .card-header List products
      .card-body
        table.table.table-hover.table-sm
            thead 
                tr 
                    th STT 
                    th Hinh anh 
                    th Tieu de 
                    th Gia 
                    th Trang thai 
                    th Hanh dong 
            tbody
                each item, index in products 
                    tr 
                        td #{index + 1}
                        td 
                            img(src=item.thumbnail
                                alt=item.title
                                width="100px"
                                height="auto")
                        td #{item.title}
                        td #{item.price}$
                        td
                            if(item.status == 'active')
                                a(href="#" class="badge badge-success") Active
                            else 
                                a(href="#" class="badge badge-danger") Inactive
                        td 
                            button(class="btn btn-warning btn-sm" ) Modify
                            button(class="btn btn-danger btn-sm ml-1" ) Delete