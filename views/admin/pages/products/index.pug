extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert-update-message.pug




block main 
    h1 Product list
    +alert-update-message("3000")


    .card.mb-3
        .card-header Filter and search
        .card-body
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6
                    +search(keyword)


    .card.mb-3
        .card-header List products
        .card-body
            .row 
                .col-8
                    +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                .col-4
                    a(href=`${prefixAdmin}/products/create`
                    class="btn btn-outline-success"
                    ) + Add new product

                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead 
                        tr
                            th
                                input(type="checkbox" name="checkall")
                            th ID
                            th Image
                            th Name 
                            th Price 
                            th Status 
                            th Action 
                    tbody
                        each item, index in products 
                            tr 
                                td 
                                    input(
                                    type="checkbox"
                                    name="id"
                                    value=item.id
                                    )
                                td #{index + 1}
                                td 
                                    img(src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    input(
                                        type="number"
                                        value=item.position 
                                        name="position"
                                        min="1"
                                        style="width: 60px"
                                        )
                                td
                                    if(item.status == 'active')
                                        a(href="javascript:;"
                                        data-status = item.status
                                        data-id = item.id  
                                        button-change-status
                                        class="badge badge-success"
                                        ) Active
                                    else 
                                        a(href="#" 
                                        data-status = item.status
                                        data-id = item.id  
                                        button-change-status
                                        class="badge badge-danger") Inactive
                                td 
                                    a(  href = `${prefixAdmin}/products/detail/${item.id}`
                                        class="btn btn-secondary btn-sm" 
                                        ) Detail
                                        
                                    a(  href = `${prefixAdmin}/products/edit/${item.id}`
                                        class="btn btn-warning btn-sm" 

                                        ) Modify

                                    button(
                                        class="btn btn-danger btn-sm ml-1" 
                                        data-id=item.id
                                        button-delete ) Delete


    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path = `${prefixAdmin}/products/change-status`
    )
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path = `${prefixAdmin}/products/delete`
    ) 



    script(src="/admin/js/product.js") 
