extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert-update-message.pug





block main 
    h1 Recycle Bin

    +alert-update-message("2000")

    .card.mb-3
        .card-header Filter and search
        .card-body
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6
                    +search(keyword)


    .card.mb-3
        .card-header List products deleted
        .card-body
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr
                        th
                            input(type="checkbox" name="checkall")
                        th ID
                        th Image
                        th Name 
                        th Price 
                        th Status 
                        th Deleted at
                        th Action 
                tbody
                    each item, index in products 
                        tr 
                            td 
                                input(
                                type="checkbox"
                                name="id"
                                value=item.id
                                )
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto")
                            td #{item.title}
                            td #{item.price}$
                            td
                                if(item.status == 'active')
                                    a(href="javascript:;"
                                    data-status = item.status
                                    data-id = item.id  
                                    button-change-status
                                    class="badge badge-success"
                                    ) Active
                                else 
                                    a(href="#" 
                                    data-status = item.status
                                    data-id = item.id  
                                    button-change-status
                                    class="badge badge-danger") Inactive
                            td #{item.deletedAt}
                            td 
                                button(
                                    class="btn btn-danger btn-sm"
                                    button-delete-permanent-item
                                    data-id=item.id
                                    ) Permanently deleted
                                button(

                                    class="btn btn-success btn-sm ml-1"
                                    data-status = item.status
                                    button-restore-item
                                    data-id=item.id) Restore



    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path = `${prefixAdmin}/products/change-status`
    )
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path = `${prefixAdmin}/products/delete`
    )
    form(
        action=""
        method="POST"
        id="form-button-permanently-delete"
        data-path = `${prefixAdmin}/products/recycle/delete`
    )
    form(
        action=""
        method="POST"
        id="form-button-restore"
        data-path = `${prefixAdmin}/products/recycle/restore`
    ) 



    script(src="/admin/js/product.js") 
